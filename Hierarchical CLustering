HIERARICAL CLUSTERING
library(ggplot2)
library(dplyr)
library(cluster)
data("trees")
head(trees)
tree_data <- trees[, -3]
scaled_data <- scale(tree_data)
dist_matrix <- dist(scaled_data, method = "euclidean")
hclust_result <- hclust(dist_matrix, method = "single")
plot(hclust_result, main = "Dendrogram using Single Linkage (Tree Dataset)",
xlab = "", ylab = "Height", sub = "",
cex = 0.7, hang = -1) # 'cex' for labelsize and 'hang' for clarity oftree
